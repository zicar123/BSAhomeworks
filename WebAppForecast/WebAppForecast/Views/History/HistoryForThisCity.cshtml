@model WebAppForecast.ModelsHistory.CityHistory

@{
    ViewBag.Title = Model.CityName + "- weather history";
}

<h2>Weather history for - @Model.CityName</h2>

<div>
    <hr />
    <table class="cityTable">
        <tr>
            <td>
                <table border="1" class="cityTableInner">
                    <tr>
                        <td>Time</td>
                        <td>Temp</td>
                        <td>Pressure</td>
                        <td>Humidity</td>
                    </tr>
                    @for (int i = 0; i < Model.Histories.Count; i++)
                    {
                        <tr>
                            <td>@Model.Histories[i].dt_txt</td>
                            <td>@Model.Histories[i].temp</td>
                            <td>@Model.Histories[i].pressure</td>
                            <td>@Model.Histories[i].humidity</td>
                        </tr>
                    }
                </table>
            </td>
            <td></td>
            <td>
                <table border="1" class="cityTableInner">
                    <tr>
                        <td>Wind speed</td>
                        <td>Wind degree</td>
                        <td>Max temp</td>
                        <td>Min temp</td>

                    </tr>
                    @for (int i = 0; i < Model.Histories.Count; i++)
                    {
                        <tr>

                            <td>@Model.Histories[i].speed</td>
                            <td>@Model.Histories[i].deg</td>
                            <td>@Model.Histories[i].temp_max</td>
                            <td>@Model.Histories[i].temp_min</td>
                        </tr>
                    }
                </table>
            </td>
        </tr>
    </table>
</div>
<p>
    @Html.ActionLink("Back to city list", "GetHistoryList")
</p>
